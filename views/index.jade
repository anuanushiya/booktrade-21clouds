extends layout

block content
  link(rel='stylesheet', href='/stylesheets/login-reset.css')
  link(rel='stylesheet', href='/stylesheets/login.css')
  div(class="pen-title")
    h1.
      Form Login
  div(class="module form-module", ng-controller="userController")
    div(class="toggle")
      i(class="fa fa-times fa-pencil")
        div(class="tooltip").
          Click Me
    div(class="form")
      h2.
        Login to your account
      form
        input(type="text", placeholder="Enter username", ng-model="user.username")
        input(type="password", placeholder="Enter password", ng-model="user.password")
        button(ng-click="login()").
          Login
    div(class="form")
      h2.
        Create an account
      form
        input(type="text", placeholder="Enter username", ng-model="user.username")
        input(type="password", placeholder="Enter password", ng-model="user.password")
        input(type="email", placeholder="Enter email", ng-model="user.email")
        input(type="number", placeholder="Enter phone", ng-model="user.phone")
        button(ng-click="register()").
          Register
    div(class="cta")
      a(href="#").
        Forgot your password?
  script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(src='/javascripts/login.js')